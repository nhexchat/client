---
import nhex from "../assets/nhex.webp"
import nh_irc from "../assets/nh_irc.png"
import { Image } from "astro:assets"
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>nhex :: irc client</title>
	</head>
	<body class="h-dvh font-mono max-w-7xl flex flex-col items-center gap-2 sm:px-4 sm:pt-6 pt-2 mx-auto text-slate-200">
			<Image class="w-32 sm:w-80 drop-shadow-[0_0_10px_rgba(255,255,255,.3)]" src={nhex} alt="nhex logo"/>
		<div class="flex sm:gap-14 gap-8 text-xl font-bold">
			<a href="https://github.com/nhexirc/nhex" target="_blank">download</a>
			<a href="https://docs.nhexirc.com" target="_blank">documentation</a>
		</div>
			<Image class="w-[56em]" src={nh_irc} alt="nhex irc"/>
	</body>
</html>
